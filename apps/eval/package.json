{
	"name": "eva-ts",
	"version": "1.0.1",
	"description": "A TypeScript evaluation framework for running concurrent evaluations with progress tracking and result persistence",
	"keywords": [
		"evaluation",
		"testing",
		"scoring",
		"concurrent",
		"typescript",
		"framework",
		"benchmark",
		"metrics"
	],
	"author": "Lilac Labs",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/lilac-labs/eva.git",
		"directory": "apps/eval"
	},
	"homepage": "https://github.com/lilac-labs/eva/tree/main/apps/eval#readme",
	"bugs": {
		"url": "https://github.com/lilac-labs/eva/issues"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist/**/*",
		"README.md",
		"LICENSE",
		"package.json"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:clean": "rm -rf dist && npm run build",
		"clean": "rm -rf .turbo node_modules dist",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"check-types": "tsc -p tsconfig.json --noEmit",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"prepublishOnly": "npm run build:clean && npm run lint"
	},
	"dependencies": {
		"cli-progress": "^3.12.0",
		"p-limit": "^6.2.0",
		"@repo/db": "*"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.32.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/cli-progress": "^3.11.6",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"semantic-release": "^24.2.7",
		"tsc-alias": "^1.8.16",
		"turbo": "^2.5.5",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	}
}
